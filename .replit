modules = ["web", "nodejs-20"]
run = "node index.js"

[nix]
channel = "stable-24_05"
packages = ["dotnet-sdk_8"]

[deployment]
run = ["sh", "-c", "dotnet run --urls=http://0.0.0.0:5000"]

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 43493007
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dotnet run"

[[ports]]
localPort = 5000
externalPort = 80
